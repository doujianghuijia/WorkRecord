<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加员工"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/addemployee_name"
            android:layout_width="200dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"
            android:hint="职工姓名"/>
        <TextView
            android:id="@+id/addemployee_nameerrtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="#ff0000"
            android:text="职工姓名不能为空"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/addemployee_phonenumber"
            android:layout_width="200dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:numeric="integer"
            android:layout_height="wrap_content"
            android:hint="职工电话"/>
        <TextView
            android:id="@+id/addemployee_phoneerrtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="#ff0000"
            android:text="职工电话不能为空"/>
    </LinearLayout>
    <Button
        android:id="@+id/addemployee_okbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"/>
    <Button
        android:id="@+id/addemployee_cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"/>

</LinearLayout>