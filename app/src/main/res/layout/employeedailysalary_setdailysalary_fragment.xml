<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="该工人现有日薪规则"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/setdailysalary_swipemeaulistview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="添加日薪规则"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="薪水生效开始日期"
            android:paddingLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/setdailysalary_startTimeEditText"
            android:layout_marginLeft="80dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="日薪为："
            android:paddingLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/setdailysalary_dailySalaryEditText"
            android:layout_marginLeft="80dp"
            android:layout_width="80dp"
            android:singleLine="true"
            android:numeric="integer"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" 元/天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/setdailysalary_addbtn"
        android:text="确定添加"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>